<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.coreymalbright.mycalculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonOne"
        android:id="@+id/button1"
        android:layout_marginTop="81dp"
        android:minWidth="80dp"
        android:background="#837f66"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTwo"
        android:id="@+id/button2"
        android:background="#837f66"
        android:layout_alignTop="@+id/button1"
        android:minWidth="80dp"
        android:layout_alignStart="@+id/button5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonThree"
        android:id="@+id/button3"
        android:background="#837f66"
        android:layout_alignTop="@+id/button2"
        android:minWidth="80dp"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonFour"
        android:id="@+id/button4"
        android:layout_below="@+id/button1"
        android:layout_alignParentStart="true"
        android:minWidth="80dp"
        android:layout_marginTop="29dp"
        android:background="#837f66" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonFive"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_centerHorizontal="true"
        android:minWidth="80dp"
        android:background="#837f66" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonSix"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignParentEnd="true"
        android:minWidth="80dp"
        android:background="#837f66" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonSeven"
        android:id="@+id/button7"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:minWidth="80dp"
        android:background="#837f66" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonEight"
        android:id="@+id/button8"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignEnd="@+id/button5"
        android:minWidth="80dp"
        android:background="#837f66" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonNine"
        android:id="@+id/button9"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignParentEnd="true"
        android:minWidth="80dp"
        android:background="#837f66" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonZero"
        android:id="@+id/button10"
        android:minWidth="80dp"
        android:background="#837f66"
        android:layout_alignTop="@+id/button11"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonClear"
        android:id="@+id/button11"
        android:minWidth="80dp"
        android:background="#837f66"
        android:layout_alignTop="@+id/button12"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonClose"
        android:id="@+id/button12"
        android:minWidth="80dp"
        android:background="#837f66"
        android:layout_below="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:layout_marginTop="32dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonThirteen"
        android:id="@+id/button13"
        android:background="#d54141"
        android:minWidth="40dp"
        android:layout_above="@+id/button17"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonSubtract"
        android:id="@+id/button14"
        android:background="#d54141"
        android:minWidth="40dp"
        android:layout_above="@+id/button17"
        android:layout_toEndOf="@+id/button10" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonDivide"
        android:id="@+id/button15"
        android:background="#d54141"
        android:minWidth="40dp"
        android:layout_alignTop="@+id/button14"
        android:layout_alignEnd="@+id/button11" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonSixteen"
        android:id="@+id/button16"
        android:background="#d54141"
        android:minWidth="40dp"
        android:layout_alignTop="@+id/button14"
        android:layout_alignEnd="@+id/button17" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonEquals"
        android:id="@+id/button17"
        android:minWidth="920dp"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_above="@+id/button2"
        android:layout_marginBottom="24dp"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignParentStart="true" />
</RelativeLayout>
